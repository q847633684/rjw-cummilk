<?xml version="1.0" encoding="utf-8"?>
<!-- When Cumpilation is active: add CompCumBucketLink to bucket defs so bucket can link to bed, restrict who can use, and mark mixed cum when multiple pawns use. -->
<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@defName='stool_with_cumbucket']/comps</xpath>
    <value>
      <li Class="EqualMilking.Comps.CompProperties_CumBucketLink" />
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@defName='chair_with_cumbucket']/comps</xpath>
    <value>
      <li Class="EqualMilking.Comps.CompProperties_CumBucketLink" />
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@defName='autochair_with_cumtank']/comps</xpath>
    <value>
      <li Class="EqualMilking.Comps.CompProperties_CumBucketLink" />
    </value>
  </Operation>
</Patch>
