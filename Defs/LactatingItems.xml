<Defs>
    <!-- 继承 MakeableDrugBase 以触发原版物品信息面板的完整成瘾/化学物质区块显示 -->
    <ThingDef Name="EM_DrugBase" ParentName="MakeableDrugBase" Abstract="True">
        <graphicData>
            <graphicClass>Graphic_StackCount</graphicClass>
            <drawSize>0.8</drawSize>
        </graphicData>
        <statBases>
            <Mass>0.025</Mass>
            <MaxHitPoints>60</MaxHitPoints>
            <DeteriorationRate>0</DeteriorationRate>
            <WorkToMake>100</WorkToMake>
            <Flammability>1.0</Flammability>
        </statBases>
        <ingestible>
            <drugCategory>Medical</drugCategory>
            <ingestHoldOffsetStanding>
                <northDefault>
                    <offset>(0.18,0,0)</offset>
                </northDefault>
            </ingestHoldOffsetStanding>
            <preferability>NeverForNutrition</preferability>
            <foodType>Processed,Fluid</foodType>
            <baseIngestTicks>90</baseIngestTicks>
            <ingestSound>Ingest_Inject</ingestSound>
            <ingestCommandString>Inject {0}</ingestCommandString>
            <ingestReportString>Injecting {0}.</ingestReportString>
            <chairSearchRadius>0</chairSearchRadius>
        </ingestible>
        <recipeMaker>
            <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
            <workSkill>Intellectual</workSkill>
            <bulkRecipeCount>4</bulkRecipeCount>
            <recipeUsers>
                <li>DrugLab</li>
            </recipeUsers>
            <soundWorking>Recipe_Drug</soundWorking>
        </recipeMaker>
        <comps>
            <li Class="CompProperties_Drug">
              <addictiveness>0</addictiveness>
              <isCombatEnhancingDrug>false</isCombatEnhancingDrug>
            </li>
          </comps>
    </ThingDef>

    <ThingDef ParentName="EM_DrugBase">
        <defName>EM_Prolactin</defName>
        <label>Prolactin</label>
        <techLevel>Medieval</techLevel>
        <graphicData>
            <texPath>Things/Item/Ingestible/Prolactin</texPath>
        </graphicData>
        <statBases>
            <MarketValue>50</MarketValue>
            <WorkToMake>100</WorkToMake>
            <Flammability>1.0</Flammability>
        </statBases>
        <ingestible>
            <drugCategory>Medical</drugCategory>
            <joy>0.3</joy>
            <joyKind>Chemical</joyKind>
            <outcomeDoers>
                <!-- 泌乳（耐受联动：高耐受时效果减弱） -->
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>Lactating</hediffDef>
                    <severity>0.5</severity>
                    <toleranceChemical>EM_Prolactin_Chemical</toleranceChemical>
                </li>
                <!-- 兴奋/增益已并入泌乳期：有耐受或成瘾时 Lactating 阶段给意识/操纵/移动 +10%，与泌乳期同长，不再单独给短期 High -->
                <!-- 耐受 +0.044，按体型分摊 -->
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>EM_Prolactin_Tolerance</hediffDef>
                    <severity>0.044</severity>
                    <divideByBodySize>true</divideByBodySize>
                </li>
                <!-- 娱乐需求，耐受联动 -->
                <li Class="IngestionOutcomeDoer_OffsetNeed">
                    <need>Joy</need>
                    <offset>0.3</offset>
                    <toleranceChemical>EM_Prolactin_Chemical</toleranceChemical>
                </li>
            </outcomeDoers>
        </ingestible>
        <costList>
            <Neutroamine>2</Neutroamine>
            <MedicineHerbal>1</MedicineHerbal>
            <HumpShroom>4</HumpShroom>
        </costList>
        <comps>
            <li Class="CompProperties_Drug">
                <chemical>EM_Prolactin_Chemical</chemical>
                <addictiveness>0.04</addictiveness>
                <minToleranceToAddict>0.03</minToleranceToAddict>
                <existingAddictionSeverityOffset>0.2</existingAddictionSeverityOffset>
                <needLevelOffset>1</needLevelOffset>
                <listOrder>30</listOrder>
                <!-- 降低单针过量严重度，避免连打多针即触发过量倒地；更宽松 -->
                <overdoseSeverityOffset>
                    <min>0.03</min>
                    <max>0.06</max>
                </overdoseSeverityOffset>
                <largeOverdoseChance>0.01</largeOverdoseChance>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="EM_DrugBase">
        <defName>EM_Lucilactin</defName>
        <label>Lucilactin</label>
        <description>Prolactin 基础药效的 4 倍，一针即永久级泌乳并直接成瘾。需定期服用以维持需求。</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Item/Ingestible/Lucilactin</texPath>
        </graphicData>
        <statBases>
            <MarketValue>400</MarketValue>
            <WorkToMake>100</WorkToMake>
            <Flammability>1.0</Flammability>
        </statBases>
        <ingestible>
            <drugCategory>Medical</drugCategory>
            <joy>1.2</joy>
            <joyKind>Chemical</joyKind>
            <outcomeDoers>
                <!-- 4 倍泌乳：0.5×4 = 2.0 -->
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>Lactating</hediffDef>
                    <severity>2</severity>
                    <toleranceChemical>EM_Prolactin_Chemical</toleranceChemical>
                </li>
                <!-- 兴奋/增益同泌乳期，不再单独给 EM_Prolactin_High -->
                <!-- 耐受 +0.176（0.044×4），按体型 -->
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>EM_Prolactin_Tolerance</hediffDef>
                    <severity>0.176</severity>
                    <divideByBodySize>true</divideByBodySize>
                </li>
                <!-- Joy 4 倍 -->
                <li Class="IngestionOutcomeDoer_OffsetNeed">
                    <need>Joy</need>
                    <offset>1.2</offset>
                    <toleranceChemical>EM_Prolactin_Chemical</toleranceChemical>
                </li>
            </outcomeDoers>
        </ingestible>
        <costList>
            <EM_Prolactin>1</EM_Prolactin>
            <Luciferium>2</Luciferium>
        </costList>
        <comps>
            <li Class="CompProperties_Drug">
                <chemical>EM_Prolactin_Chemical</chemical>
                <addictiveness>1</addictiveness>
                <minToleranceToAddict>0</minToleranceToAddict>
                <existingAddictionSeverityOffset>1</existingAddictionSeverityOffset>
                <needLevelOffset>1</needLevelOffset>
                <listOrder>30</listOrder>
                <isCombatEnhancingDrug>false</isCombatEnhancingDrug>
                <overdoseSeverityOffset>
                    <min>0.03</min>
                    <max>0.06</max>
                </overdoseSeverityOffset>
                <largeOverdoseChance>0.01</largeOverdoseChance>
            </li>
        </comps>
    </ThingDef>
</Defs>