<Defs>
    <ThoughtDef>
        <defName>EM_Prolactin_Joy</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.5</durationDays>
        <stages>
            <li>
                <label>化学温暖</label>
                <description>催乳素让我感到温暖和放松。</description>
                <baseMoodEffect>6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    
    <ThoughtDef>
        <defName>EM_Prolactin_HighThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>EM_Prolactin_High</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>催乳素兴奋</label>
                <description>身体暖暖的，有点飘。</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    
    <ThoughtDef>
        <defName>EM_Prolactin_Withdrawal</defName>
        <workerClass>EqualMilking.ThoughtWorker_ProlactinWithdrawal</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>催乳素戒断</label>
                <description>我真的需要再服一剂。没有它我的身体感觉不完整。</description>
                <baseMoodEffect>-12</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef>
        <defName>EM_HadSexWhileLactating</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.5</durationDays>
        <stages>
            <li>
                <label>泌乳期性事</label>
                <description>刚经历过性事，身体仍处于泌乳期。</description>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef>
        <defName>EM_ForcedMilking</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.5</durationDays>
        <stages>
            <li>
                <label>被强制挤奶</label>
                <description>有人在我未允许的情况下挤了我的奶。</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef>
        <defName>EM_PartnerAteMyProduct</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.25</durationDays>
        <stages>
            <li>
                <label>伴侣吃了我的产物</label>
                <description>伴侣吃了我产的奶/精液制品，有点开心。</description>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <!-- 10.8-5：被允许的人挤奶时产主获得正面记忆 -->
    <ThoughtDef>
        <defName>EM_AllowedMilking</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>0.25</durationDays>
        <stages>
            <li>
                <label>被允许的人挤奶</label>
                <description>我允许的人帮我挤奶了，感到安心。</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <!-- 10.8-5：成瘾满足时的小幅正面心情 -->
    <ThoughtDef>
        <defName>EM_AddictionSatisfied</defName>
        <workerClass>EqualMilking.ThoughtWorker_AddictionSatisfied</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>催乳素满足</label>
                <description>身体得到了足够的催乳素，状态平稳。</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <!-- 10.8-6：满池时轻微不适 -->
    <ThoughtDef>
        <defName>EM_MilkPoolFull</defName>
        <workerClass>EqualMilking.ThoughtWorker_MilkPoolFull</workerClass>
        <stages>
            <li>
                <label>奶水过满</label>
                <description>乳房涨得有点难受，该挤奶了。</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <!-- 10.8-6：长时间未挤奶且奶量较多时不适 -->
    <ThoughtDef>
        <defName>EM_LongTimeNotMilked</defName>
        <workerClass>EqualMilking.ThoughtWorker_LongTimeNotMilked</workerClass>
        <stages>
            <li>
                <label>很久没挤奶</label>
                <description>已经很久没挤奶了，有点胀痛。</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>